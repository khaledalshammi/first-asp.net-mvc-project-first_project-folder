@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br/>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(i=>i.Title))
        {
            <tr>
                <td width="calc(100%/5)">
                    @obj.Title
                </td>
                <td width="calc(100%/5)">
                        @obj.ISBN
                </td>
                <td width="calc(100%/5)">
                        @obj.Price
                </td>
                <td width="calc(100%/5)">
                        @obj.Author
                </td>
                <td width="calc(100%/5)">
                        @obj.Category.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-route-id="@obj.Id" asp-controller="Product" asp-action="Upsert"
                            class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-route-id="@obj.Id" asp-controller="Product" asp-action="Delete"
                            class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                            <i class="bi"></i>Details
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody> 
</table>
</div>
