@model Company

Hello @Model.Name

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Company Details</h2>
        <hr />
    </div>

    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="StreetAddress"></label>
        <input asp-for="StreetAddress" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" disabled class="form-control" />
    </div>
    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back To List
    </a>
</div>